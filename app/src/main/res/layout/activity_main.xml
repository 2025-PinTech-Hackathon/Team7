<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".MainActivity"

    >

    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/r8e8n5mr52qy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F3F3F3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/r0zb1j2vt8wd"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="15dp"
                    android:background="#D9D9D9"
                    android:orientation="vertical"></LinearLayout>


                <LinearLayout
                    android:id="@+id/rmk32jmndmmh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="17dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="21dp">

                    <LinearLayout
                        android:id="@+id/rbt3cd7sqam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:gravity="end"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"

                            android:layout_width="70dp"
                            android:layout_height="21dp"
                            app:srcCompat="@drawable/dot3" />

                        <LinearLayout
                            android:id="@+id/rtm6ywc5475p"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:orientation="horizontal">


                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/rbfkdchjlj9w"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:layout_marginBottom="13dp"
                        android:text="페이머니"
                        android:textColor="#7A7878"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/re4cymdgm2t7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="27dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/rq9khtus4be9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="11dp"
                            android:text="0원"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/rl12vqs0va68"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="&gt;"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/r4i98jxjavtp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/r2pklcangyll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/rry5libfe6z"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:background="#d9d9d9"
                                android:clickable="true"
                                android:focusable="true"
                                android:orientation="vertical"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="5dp">

                                <TextView
                                    android:id="@+id/rrnm2z3hggr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="충전"
                                    android:textColor="#7A7878"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ra9hk41phykt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#FEDE28"
                                android:clickable="true"
                                android:focusable="true"
                                android:orientation="vertical"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="5dp">

                                <TextView
                                    android:id="@+id/rwyxnnmivls"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="송금"
                                    android:textColor="#7A7878"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rtmr3p7dkda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="288dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingHorizontal="37dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="77dp">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="75dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/bottomitem0" />

                    <TextView
                        android:id="@+id/rafn86hcb1wc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="41dp"
                        android:text="결제"
                        android:textColor="#686464"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>