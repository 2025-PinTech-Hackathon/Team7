<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/ru4mymlulc5k"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_back"
                android:scaleType="centerCrop"
                android:padding="0dp"
                android:contentDescription="뒤로가기"
                />
            <LinearLayout
                android:id="@+id/r9ziagw1kx98"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="394dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rwvjx1ibp32m"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:background="@drawable/input_account_square"
                    android:orientation="vertical">
                    <EditText
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:id="@+id/edt_account"
                        android:textColor="#000000"
                        android:textColorHint="#A0A0A0"
                        android:textSize="25sp"
                        android:layout_height="50dp"
                        android:layout_width="330dp"
                        android:hint="계좌번호"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/r5xg5zwl7asc"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:background="@drawable/input_account_square"
                    android:orientation="vertical">
                    <!--은행 증권사 버튼 눌러서 상호작용하는것까지?-->
                    <Button
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        android:gravity="left|center"
                        android:background="@null"
                        android:id="@+id/edt_bank"
                        android:textColor="#A0A0A0"
                        android:textSize="25sp"
                        android:layout_height="50dp"
                        android:layout_width="330dp"
                        android:text="은행/증권사"
                        />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="#FDDD28"
                android:id="@+id/btn_okay"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_height="60dp"
                android:layout_width="350dp"
                android:text="확인"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
